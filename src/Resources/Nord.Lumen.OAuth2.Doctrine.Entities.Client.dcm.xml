<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                   https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Nord\Lumen\OAuth2\Doctrine\Entities\Client" table="oauth_clients"
            repository-class="Nord\Lumen\OAuth2\Doctrine\Repositories\ClientRepository">

        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="key" column="`key`" type="string"/>
        <field name="secret" type="string"/>
        <field name="name" type="string"/>

    </entity>

</doctrine-mapping>
